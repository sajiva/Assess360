<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
 http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd" version="1.0">


    <persistence-unit name="default">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <properties>
            <property name="hibernate.naming.implicit-strategy"
                      value="org.hibernate.boot.model.naming.ImplicitNamingStrategyLegacyHbmImpl" />
            <property name="hibernate.naming.physical_strategy"
                      value="org.hibernate.boot.model.naming.PhysicalNamingStrategyStandardImpl" />
        </properties>
    </persistence-unit>

</persistence>